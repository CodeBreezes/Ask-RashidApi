@{
    ViewData["Title"] = "Manage Services, Subtopics & Bulletins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="mt-4">

    <h2 class="text-center">Manage Services, Subtopics & Bulletins</h2>
    <hr />

    <!-- SERVICE FORM -->
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">Add / Edit Service</div>
        <div class="card-body">
            <form id="serviceForm">
                <input type="hidden" name="UniqueId" id="ServiceId" />
                <div class="row mb-2">
                    <div class="col-md-4">
                        <input class="form-control" name="Name" placeholder="Service Name" required />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Cost" placeholder="Cost" type="number" required />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Description" placeholder="Description" required />
                    </div>
                </div>
                <button class="btn btn-success" type="submit">Save Service</button>
            </form>
        </div>
    </div>

    <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped" id="serviceTable">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- SUBTOPIC FORM -->
    <div class="card mb-3">
        <div class="card-header bg-info text-white">Add / Edit Subtopic</div>
        <div class="card-body">
            <form id="subtopicForm">
                <input type="hidden" name="Id" id="SubtopicId" />
                <div class="row mb-2">
                    <div class="col-md-6">
                        <select class="form-select" name="ServiceId" id="serviceDropdown" required>
                            <option value="">Select Service</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" name="Title" placeholder="Subtopic Title" required />
                    </div>
                </div>
                <button class="btn btn-info" type="submit">Save Subtopic</button>
            </form>
        </div>
    </div>

    <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped" id="subtopicTable">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Service</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- BULLETIN FORM -->
    <div class="card mb-3">
        <div class="card-header bg-secondary text-white">Add / Edit Bulletin</div>
        <div class="card-body">
            <form id="bulletinForm">
                <input type="hidden" name="Id" id="BulletinId" />
                <div class="row mb-2">
                    <div class="col-md-4">
                        <select class="form-select" name="ServiceId" id="bulletinServiceDropdown" required>
                            <option value="">Select Service</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" name="SubtopicId" id="subtopicDropdown" required>
                            <option value="">Select Subtopic</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Content" placeholder="Bulletin Content" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4">
                        <input class="form-control" name="OrderIndex" type="number" placeholder="Order Index" required />
                    </div>
                </div>
                <button class="btn btn-secondary" type="submit">Save Bulletin</button>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="bulletinTable">
            <thead class="table-light">
                <tr>
                    <th>Content</th>
                    <th>Subtopic</th>
                    <th>Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadAll();

            function loadAll() {
                loadServices();
                loadServiceTable();
            }

            function loadServices() {
                $.get('/Manage/GetAllServices', function (data) {
                    $('#serviceDropdown, #bulletinServiceDropdown').html('<option value="">Select Service</option>');
                    data.forEach(s => {
                        $('#serviceDropdown, #bulletinServiceDropdown').append(`<option value="${s.uniqueId}">${s.name}</option>`);
                    });
                });
            }

            function loadServiceTable() {
                $.get('/Manage/GetAllServicesWithDetails', function (data) {
                    const tbody = $('#serviceTable tbody');
                    tbody.empty();
                    data.forEach(s => {
                        tbody.append(`<tr>
                            <td>${s.name}</td>
                            <td>${s.cost}</td>
                            <td>${s.description}</td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editService(${s.uniqueId})">Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteService(${s.uniqueId})">Delete</button>
                            </td>
                        </tr>`);
                    });
                });
            }

            $('#serviceForm').submit(function (e) {
                e.preventDefault();
                $.post('/Manage/SaveService', $(this).serialize(), function () {
                    alert('✅ Service saved.');
                    $('#serviceForm')[0].reset();
                    loadAll();
                });
            });

            $('#subtopicForm').submit(function (e) {
                e.preventDefault();
                $.post('/Manage/SaveSubtopic', $(this).serialize(), function () {
                    alert('✅ Subtopic saved.');
                    $('#subtopicForm')[0].reset();
                    loadSubtopics();
                });
            });

            $('#bulletinForm').submit(function (e) {
                e.preventDefault();
                $.post('/Manage/SaveBulletin', $(this).serialize(), function () {
                    alert('✅ Bulletin saved.');
                    $('#bulletinForm')[0].reset();
                    loadBulletins();
                });
            });

            $('#bulletinServiceDropdown').change(function () {
                var serviceId = $(this).val();
                if (serviceId) {
                    $.get('/Manage/GetSubtopicsByService/' + serviceId, function (data) {
                        $('#subtopicDropdown').html('<option value="">Select Subtopic</option>');
                        data.forEach(sub => {
                            $('#subtopicDropdown').append(`<option value="${sub.id}">${sub.title}</option>`);
                        });
                    });
                }
            });
        });

        function editService(id) {
            $.get(`/Manage/GetServiceById/${id}`, function (s) {
                $('#ServiceId').val(s.uniqueId);
                $('input[name="Name"]').val(s.name);
                $('input[name="Cost"]').val(s.cost);
                $('input[name="Description"]').val(s.description);
            });
        }

        function deleteService(id) {
            if (confirm("Are you sure you want to delete this service?")) {
                $.post(`/Manage/DeleteService/${id}`, function () {
                    alert("Deleted successfully");
                    loadServices();
                    loadServiceTable();
                });
            }
        }
    </script>
}
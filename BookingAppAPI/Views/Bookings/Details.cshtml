@model BookingAppAPI.ViewModels.BookingDetailsViewModel

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.activeTabName = "Booking";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded">
        <!-- Booking Info Header -->
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Booking Info</h4>
        </div>

        <div class="card-body">
            <!-- Booking Info Section -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Service Name</label>
                    <div>@Model.ServiceName</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Topic</label>
                    <div>@Model.Topic</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Notes</label>
                    <div>@Model.Notes</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Booking Date</label>
                    <div>@Model.StartedDate.ToString("dd MMM yyyy") @Model.StartedTime.ToString(@"HH\:mm")</div>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="card border-secondary shadow-sm mt-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">User Info</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-2 text-center">
                            <img src="@Url.Content("~/UserProfiles/" + Model.UserUniqueId + "/" + (string.IsNullOrEmpty(Model.ProfileImageUrl) ? "default.jpg" : Model.ProfileImageUrl))"
                                 alt="Profile Image"
                                 class="img-fluid rounded shadow-sm"
                                 style="width:100px;" />
                        </div>
                        <div class="col-md-10">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <div>@Model.FullName</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Gender</label>
                                    <div>@Model.Gender</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Email</label>
                                    <div>@Model.Email</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Phone</label>
                                    <div>@Model.PhoneNumber</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Address</label>
                                    <div>@Model.Address</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Date of Birth</label>
                                    <div>@Model.DateOfBirth.ToString("dd MMM yyyy")</div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div> <!-- End User Info Card Body -->
            </div> <!-- End User Info Card -->

        </div> <!-- End Booking Card Body -->
    </div> <!-- End Booking Card -->

    <div class="mt-3 text-end">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Bookings
        </a>
    </div>
</div>

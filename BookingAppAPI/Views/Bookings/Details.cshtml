@model BookingAppAPI.DB.Booking

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Bookings";
}

<div class="content px-2 py-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-3">
            <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i> Booking Details</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
        <div class="card-body">

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="border rounded p-3">
                        <h5 class="text-primary"><i class="bi bi-calendar-check me-1"></i> Booking Info</h5>
                        <p><strong>ID:</strong> @Model.UniqueId</p>
                        <p><strong>Service:</strong> @Model.Service?.Name</p>
                        <p><strong>Date:</strong> @Model.StartedDate.ToString("dd MMM yyyy")</p>
                        <p><strong>Time:</strong> @Model.StartedTime</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="border rounded p-3">
                        <h5 class="text-primary"><i class="bi bi-person-fill me-1"></i> Customer Info</h5>
                        <p><strong>Name:</strong> @Model.User?.FullName</p>
                        <p><strong>Phone:</strong> @Model.User?.PhoneNumber</p>
                        <p><strong>Email:</strong> @Model.User?.Email</p>
                    </div>
                </div>
            </div>

            @if (Model.PaymentRequests != null && Model.PaymentRequests.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="border rounded p-3 bg-light">
                            <h5 class="text-success"><i class="bi bi-credit-card me-1"></i> Payment Info</h5>

                            @foreach (var payment in Model.PaymentRequests)
                            {
                                <div class="mb-3 p-3 border rounded shadow-sm bg-white">
                                    <p><strong>Amount:</strong> @payment.Amount @payment.Currency</p>
                                    <p><strong>Phone:</strong> @payment.PhoneNumber</p>
                                    <p><strong>Name:</strong> @payment.CustomerName</p>
                                    <p><strong>Email:</strong> @payment.Email</p>
                                    <p><strong>Description:</strong> @payment.Description</p>
                                    <p><strong>Date:</strong> @payment.CreatedDate.ToString("dd MMM yyyy hh:mm tt")</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end gap-2">
               
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list me-1"></i> Back to List
                </a>
            </div>

        </div>
    </div>
</div>

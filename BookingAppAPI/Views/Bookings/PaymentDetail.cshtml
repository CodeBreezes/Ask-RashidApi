@model BookingAppAPI.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Payment";
}

<div class="container mt-4">
    <!-- Payment Info Card -->
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Payment Info</h4>
        </div>
        <div class="card-body">
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Booking ID</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.BookingId) ? "No Booking" : Model.BookingId)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Customer Name</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.CustomerName) ? "No Name" : Model.CustomerName)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Mobile</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.PhoneNumber) ? "No Phone" : Model.PhoneNumber)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Email</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.Email) ? "No Email" : Model.Email)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Service Name</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.ServiceName) ? "No Service" : Model.ServiceName)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Amount Paid</label>
                    <div class="text-success fw-bold">@Model.Amount @Model.Currency</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Appointment Date</label>
                    <div>@(Model.AppointmentDate.HasValue ? Model.AppointmentDate.Value.ToString("dd MMM yyyy") : "No Date")</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Appointment Time</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.AppointmentTime) ? "No Time" : Model.AppointmentTime)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Description</label>
                    <div>@(string.IsNullOrWhiteSpace(Model.Description) ? "No Description" : Model.Description)</div>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="card border-secondary shadow-sm mt-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">User Info</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-2 text-center mb-3">
                            <img src="@Url.Content("~/wwwroot/UserProfiles/" + Model.UserUniqueId + "/" + (string.IsNullOrEmpty(Model.ProfileImageUrl) ? "default.jpg" : Model.ProfileImageUrl))"
                                 onerror="this.onerror=null;this.src='@Url.Content("~/UserProfiles/default.jpg")';"
                                 class="img-fluid rounded-circle shadow-sm" style="width:120px;" />
                        </div>
                        <div class="col-md-10">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <div>@(string.IsNullOrWhiteSpace(Model.FullName) ? "No Name" : Model.FullName)</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Email</label>
                                    <div>@(string.IsNullOrWhiteSpace(Model.UserEmail) ? "No Email" : Model.UserEmail)</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Phone</label>
                                    <div>@(string.IsNullOrWhiteSpace(Model.UserPhoneNumber) ? "No Phone" : Model.UserPhoneNumber)</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Address</label>
                                    <div>@(string.IsNullOrWhiteSpace(Model.Address) ? "No Address" : Model.Address)</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Date of Birth</label>
                                    <div>@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd MMM yyyy") : "No DOB")</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Gender</label>
                                    <div>@(string.IsNullOrWhiteSpace(Model.Gender) ? "No Gender" : Model.Gender)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End User Info Card Body -->
            </div> <!-- End User Info Card -->
        </div> <!-- End Payment Card Body -->
    </div> <!-- End Payment Card -->

    <div class="mt-3 text-end">
        <a asp-action="Payment" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Payments
        </a>
    </div>
</div>

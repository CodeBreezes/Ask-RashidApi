@model IEnumerable<BookingAppAPI.DB.Models.PaymentRequest>
@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Payments";

    var searchQuery = ViewBag.Search as string ?? "";
}

<div class="content px-1">
    <div class="card shadow rounded-1">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">All Payments</h4>
            <form method="get" asp-action="Index" class="row g-2 align-items-center mb-0">
               
                <div class="col-auto">
                    <select name="filter" class="form-select form-select-sm">
                        <option value="">All</option>
                        <option value="today" selected="@(ViewBag.Filter == "today")">Today</option>
                        <option value="lastWeek" selected="@(ViewBag.Filter == "lastWeek")">Last 7 Days</option>
                        <option value="thisMonth" selected="@(ViewBag.Filter == "thisMonth")">This Month</option>
                        <option value="thisYear" selected="@(ViewBag.Filter == "thisYear")">This Year</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-light btn-sm shadow-sm">
                        <i class="bi bi-search me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="tblPayments">
                    <thead class="table-light">
                        <tr>
                            <th>Phone</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Amount</th>
                            <th>Currency</th>
                            <th>Description</th>
                            <th>Booking ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PhoneNumber</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Email</td>
                                <td>₹@item.Amount.ToString("F2")</td>
                                <td>@item.Currency</td>
                                <td>@item.Description</td>
                                <td>@item.BookingId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tblPayments').DataTable({
                "pageLength": 10,
                "ordering": true
            });
        });
    </script>
}

@model BookingAppAPI.DB.Models.PaymentRequest

@{
    ViewData["Title"] = "Create Payment Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Payment";
}

<div class="content px-1">
    <div class="card shadow rounded-1">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">New Payment Request</h4>
            <a asp-action="Index" class="btn btn-light btn-sm shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="CustomerName" class="form-label">Customer Name</label>
                    <input asp-for="CustomerName" class="form-control" placeholder="John Doe" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="9715XXXXXXXX" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control" placeholder="100" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Currency" class="form-label">Currency</label>
                    <select asp-for="Currency" class="form-select">
                        <option value="AED">AED</option>
                        <option value="INR">INR</option>
                        <option value="USD">USD</option>
                    </select>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label">Payment Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Payment for advance booking..."></textarea>
                </div>

                <div class="col-md-6">
                    <label asp-for="BookingId" class="form-label">Booking ID</label>
                    <input asp-for="BookingId" class="form-control" placeholder="Optional Booking Reference" />
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Submit Payment Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

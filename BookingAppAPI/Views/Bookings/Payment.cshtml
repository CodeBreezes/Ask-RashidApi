@model IEnumerable<BookingAppAPI.DB.Models.PaymentRequest>

@{
    ViewData["Title"] = "All Payments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Payment";
}

<div class="content px-2">
    <div class="card shadow rounded-1">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">All Payments</h4>
            <form method="get" asp-action="Payment" class="d-flex align-items-center">
                <select name="filter" class="form-select form-select-sm me-2">
                    <option value="">All</option>
                    <option value="today" selected="@(ViewBag.Filter == "today")">Today</option>
                    <option value="lastWeek" selected="@(ViewBag.Filter == "lastWeek")">Last 7 Days</option>
                    <option value="thisMonth" selected="@(ViewBag.Filter == "thisMonth")">This Month</option>
                    <option value="thisYear" selected="@(ViewBag.Filter == "thisYear")">This Year</option>
                </select>
                <button type="submit" class="btn btn-light btn-sm shadow-sm">
                    <i class="bi bi-filter-circle me-1"></i> Filter
                </button>
            </form>
        </div>

        <div class="card-body table-responsive">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Phone Number</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Amount (AED)</th>
                        <th>Description</th>
                        <th>Booking ID</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var payment in Model)
                        {
                            <tr>
                                <td>@i++</td>
                                <td>@payment.PhoneNumber</td>
                                <td>@payment.CustomerName</td>
                                <td>@payment.Email</td>
                                <td>@payment.Amount</td>
                                <td>@payment.Description</td>
                                <td>@payment.BookingId</td>
                                <td>@payment.CreatedDate.ToString("dd MMM yyyy hh:mm tt")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No payment records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model IEnumerable<BookingAppAPI.ViewModels.PaymentViewModel>

@{
    ViewData["Title"] = "All Payments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Payment";

    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
    var filterValue = ViewBag.Filter as string ?? "";

    var uaeTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Arabian Standard Time");
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">All Payments</h4>

            <form method="get" asp-action="Payment" class="d-flex align-items-end">
                <input type="text" name="searchString" class="form-control form-control-sm me-2"
                       placeholder="Search..." value="@currentFilter" />

                <select name="filter" class="form-select form-select-sm me-2">
                    <option value="">-- All Payments --</option>

                    @{
                        var options = new Dictionary<string, string>
                    {
                    { "today", "Today" },
                    { "thisWeek", "This Week" },
                    { "thisMonth", "This Month" },
                    { "thisYear", "This Year" }
                    };
                    }

                    @foreach (var opt in options)
                    {
                        if (filterValue == opt.Key)
                        {
                            <option value="@opt.Key" selected>@opt.Value</option>
                        }
                        else
                        {
                            <option value="@opt.Key">@opt.Value</option>
                        }
                    }
                </select>

                <button type="submit" class="btn btn-light btn-sm">Apply</button>
            </form>
        </div>

        <div class="table-responsive p-2">
            <table class="table table-hover table-striped table-bordered align-middle" id="tblPayments">
                <thead class="table-light text-center">
                    <tr>
                        <th>Sr.No</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Amount (AED)</th>
                        <th>Payment Date</th>
                        <th>Service</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        // Sort alphabetically by CustomerName
                        var sortedPayments = Model.OrderBy(p => p.CustomerName).ToList();
                        int index = 1;
                        foreach (var p in sortedPayments)
                        {
                            var uaeTime = TimeZoneInfo.ConvertTimeBySystemTimeZoneId(p.CreatedAt, uaeTimeZone.Id);
                            <tr>
                                <td class="text-center">@index</td>
                                <td>@p.CustomerName</td>
                                <td>@p.Email</td>
                                <td>@p.PhoneNumber</td>
                                <td>@p.Amount @p.Currency</td>
                                <td data-order="@uaeTime.ToString("yyyyMMddHHmmss")">
                                    @uaeTime.ToString("dd MMM yyyy, HH:mm")
                                </td>
                                <td>@p.ServiceName</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-primary view-details"
                                            data-payment='@Newtonsoft.Json.JsonConvert.SerializeObject(p)'>
                                        View
                                    </button>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Payment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#tblPayments').DataTable({
                "pageLength": 10,
                "ordering": true,
                "order": [[1, "asc"]], // Sort alphabetically by Customer Name
                "language": { "search": "🔍 Search payments:" },
                "columnDefs": [
                    {
                        "targets": 0, // Sr.No column
                        "orderable": false
                    }
                ]
            });

            // Renumber Sr.No after search, sort, or pagination
            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            $('.view-details').click(function () {
                var payment = $(this).data('payment');

                // Client-side UAE time
                var createdAt = new Date(payment.CreatedAt);
                var uaeOffset = 4 * 60; // GMT+4
                var uaeTime = new Date(createdAt.getTime() + (uaeOffset - createdAt.getTimezoneOffset()) * 60000);

                var html = `
                    <h5>Booking & Payment Details</h5>
                    <table class="table table-bordered">
                        <tr><th>Booking ID</th><td>${payment.BookingId}</td></tr>
                        <tr><th>Name</th><td>${payment.CustomerName}</td></tr>
                        <tr><th>Mobile</th><td>${payment.PhoneNumber}</td></tr>
                        <tr><th>Email</th><td>${payment.Email ?? ''}</td></tr>
                        <tr><th>Service Name</th><td>${payment.ServiceName}</td></tr>
                        <tr><th>Amount Paid</th><td>${payment.Amount} ${payment.Currency}</td></tr>
                        <tr><th>Appointment Date</th><td>${payment.AppointmentDate ?? ''}</td></tr>
                        <tr><th>Appointment Time</th><td>${payment.AppointmentTime ?? ''}</td></tr>
                        <tr><th>Title</th><td>${payment.Title ?? ''}</td></tr>
                        <tr><th>Description</th><td>${payment.Description ?? ''}</td></tr>
                        <tr><th>Booking Created Date & Time</th><td>${uaeTime.toLocaleString('en-GB', { hour12: true })}</td></tr>
                    </table>
                `;

                $('#modalContent').html(html);
                var modal = new bootstrap.Modal(document.getElementById('paymentModal'));
                modal.show();
            });
        });
    </script>
}

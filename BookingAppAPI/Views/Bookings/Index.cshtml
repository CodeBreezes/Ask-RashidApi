@model IEnumerable<BookingAppAPI.DB.Booking>

@{
    ViewData["Title"] = "All Bookings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Bookings";
}

<div class="content px-1">
    <div class="card shadow rounded-1">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">All Bookings</h4>

            <form method="get" asp-action="Index" class="row g-2 align-items-end m-0">
                <div class="col">
                    <select name="filter" id="filterOption" class="form-select form-select-sm">
                        <option value="">All</option>
                        <option value="today" selected="@(ViewBag.Filter == "today")">Today</option>
                        <option value="thisWeek" selected="@(ViewBag.Filter == "thisWeek")">This Week</option>
                        <option value="thisMonth" selected="@(ViewBag.Filter == "thisMonth")">This Month</option>
                        <option value="thisYear" selected="@(ViewBag.Filter == "thisYear")">This Year</option>
                        <option value="custom" selected="@(ViewBag.Filter == "custom")">Custom Range</option>
                    </select>
                </div>
                <div class="col">
                    <input type="date" name="startDate" class="form-control form-control-sm" value="@ViewBag.StartDate" />
                </div>
                <div class="col">
                    <input type="date" name="endDate" class="form-control form-control-sm" value="@ViewBag.EndDate" />
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-light btn-sm">Apply</button>
                </div>
            </form>
        </div>


        <div class="table-responsive px-2 pb-3">
            <table class="table table-striped table-bordered align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Service</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Topic</th>
                        <th>Notes</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int index = 1;
                        foreach (var booking in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@booking.Service?.Name</td>
                                <td>
                                    <strong>@booking.User?.FullName</strong><br />
                                    <small>@booking.User?.Email</small>
                                </td>
                                <td>@booking.StartedDate.ToString("dd MMM yyyy")</td>
                                <td>@booking.StartedTime.ToString("hh\\:mm tt")</td>
                                <td>@booking.Topic</td>
                                <td>@booking.Notes</td>
                                <td class="text-end">
                                    <a asp-action="Create" asp-route-id="@booking.UniqueId" >
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@booking.UniqueId" >
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@booking.UniqueId"  onclick="return confirm('Are you sure?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No bookings found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model BookingAppAPI.DB.Models.ServiceFullViewModel

@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Services";
}

<div class="container px-2">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Service</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="UniqueId" type="hidden" />
                <div class="row g-4">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Service Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Enter description" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Cost</label>
                        <input asp-for="Cost" class="form-control" placeholder="Enter cost" />
                    </div>
                </div>

                <hr class="my-4" />
                <h5 class="text-secondary border-bottom pb-2 mb-3">Subtopics</h5>

                <div id="subtopics-container"></div>

                <button type="button" class="btn btn-outline-primary btn-sm my-3" onclick="addSubtopic()">➕ Add Subtopic</button>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">💾 Save Service</button>
                    <a asp-action="Index" class="btn btn-link">← Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        let subtopicIndex = 0;

        function addSubtopic() {
            const subContainer = document.getElementById('subtopics-container');
            const subHTML = `
                <div class="border rounded p-3 mb-4 bg-light-subtle">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <label class="form-label">Subtopic Title</label>
                            <input name="Subtopics[${subtopicIndex}].Title" class="form-control" placeholder="Subtopic title" />
                        </div>
                        <div class="col-md-6 d-flex justify-content-end align-items-end">
                            <button type="button" class="btn btn-outline-success btn-sm" onclick="addBulletin(${subtopicIndex})">➕ Add Bulletin</button>
                        </div>
                    </div>

                    <div id="bulletins-${subtopicIndex}" class="mt-3 ps-3 border-start border-3 border-info"></div>
                </div>`;
            subContainer.insertAdjacentHTML('beforeend', subHTML);
            subtopicIndex++;
        }

        function addBulletin(subIndex) {
            const bulletinContainer = document.getElementById(`bulletins-${subIndex}`);
            const bulletinCount = bulletinContainer.querySelectorAll('.row').length;

            const html = `
                <div class="row g-3 align-items-center mb-2">
                    <div class="col-md-6">
                        <label class="form-label">Bulletin Content</label>
                        <input name="Subtopics[${subIndex}].Bulletins[${bulletinCount}].Content" class="form-control" placeholder="Enter bulletin" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Order</label>
                        <input name="Subtopics[${subIndex}].Bulletins[${bulletinCount}].OrderIndex" type="number" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-outline-danger mt-4 w-100" onclick="this.closest('.row').remove()">❌ Remove</button>
                    </div>
                </div>`;
            bulletinContainer.insertAdjacentHTML('beforeend', html);
        }
    </script>
}

@model BookingAppAPI.ViewModels.ResetPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Account</title>
    <style>
        :root {
            --primary-color: #d9534f;
            --primary-hover: #c9302c;
            --secondary-color: #f9f9f9;
            --text-color: #333;
            --light-text-color: #666;
            --border-color: #e0e0e0;
            --box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
            --border-radius-lg: 25px;
            --font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        body {
            font-family: var(--font-family);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: var(--secondary-color);
            background-image: radial-gradient(#d3d3d3 1px, transparent 1px);
            background-size: 20px 20px;
            color: var(--text-color);
            padding: 2rem 1rem;
            box-sizing: border-box;
        }

        .logo-container {
            margin-bottom: 2rem;
            max-width: 80px;
        }

            .logo-container img {
                width: 100%;
                height: auto;
                display: block;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

        .delete-account-container {
            background: #ffffff;
            padding: 2.5rem;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--box-shadow);
            width: 100%;
            max-width: 450px;
            border: 1px solid var(--border-color);
            box-sizing: border-box;
        }

        h2 {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            font-weight: 600;
            font-size: 1.8rem;
        }

        form div {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: var(--light-text-color);
            font-size: 0.95rem;
            font-weight: 500;
        }

        .input-group {
            position: relative;
        }

            .input-group input {
                width: 100%;
                padding: 14px 15px 14px 50px;
                border: 1px solid var(--border-color);
                border-radius: var(--border-radius-lg);
                font-size: 1rem;
                transition: all 0.3s ease;
                background-color: #fafafa;
                box-sizing: border-box;
            }

                .input-group input:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 3px rgba(217, 83, 79, 0.15);
                    background-color: #fff;
                }

            .input-group .icon {
                position: absolute;
                left: 20px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--light-text-color);
                font-size: 1.1rem;
                transition: color 0.3s ease;
            }

            .input-group input:focus + .icon {
                color: var(--primary-color);
            }

        button[type="submit"] {
            width: 100%;
            padding: 15px;
            background: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: var(--border-radius-lg);
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            button[type="submit"]:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(217, 83, 79, 0.2);
            }

        .message {
            text-align: center;
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <div class="logo-container">
        <img src="/img/logo.png" alt="Company Logo">
    </div>

    <div class="delete-account-container">
        <h2>⚠️ Delete Account</h2>

        @if (ViewBag.SuccessMessage != null)
        {
            <p class="message success">@ViewBag.SuccessMessage</p>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="message error">@ViewBag.ErrorMessage</p>
        }

        <form asp-action="DeleteAccount" method="post">
            <div>
                <label for="email">Registered Email</label>
                <div class="input-group">
                    <input id="email" asp-for="Email" type="email" placeholder="Enter your email" required />
                    <i class="fas fa-envelope icon"></i>
                </div>
            </div>

            <button type="submit">Send Delete Account Link</button>
        </form>
    </div>

</body>
</html>

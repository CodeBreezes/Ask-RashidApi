@model BookingAppAPI.DB.Services

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Services"; // or "SessionYear", "FeeTypes", etc.
}

<div class="container px-3 mt-0">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white rounded-top">
            <h4 class="mb-0">Delete Confirmation</h4>
        </div>
        <div class="card-body bg-light">
            <h5 class="text-danger mb-4">Are you sure you want to delete this service?</h5>

            <dl class="row">
                <dt class="col-sm-3 text-primary">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 text-primary">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 text-primary">Cost</dt>
                <dd class="col-sm-9">₹@Model.Cost</dd>

                <dt class="col-sm-3 text-primary">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>

                <dt class="col-sm-3 text-primary">Active Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="UniqueId" />
                <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-outline-primary ms-3 px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>

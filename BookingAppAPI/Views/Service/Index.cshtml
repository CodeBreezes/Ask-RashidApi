@model IEnumerable<BookingAppAPI.DB.Services>
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Services";
}

<div class="content px-1">
    <div class="card shadow rounded-1">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">Service List</h4>
            <a asp-action="Create" class="btn btn-light btn-sm shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="tblServices">
                    <thead class="table-light">
                        <tr>
                            <th>Sr</th>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Cost)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().LastUpdatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            // Sort alphabetically by Name
                            var sortedServices = Model.OrderBy(s => s.Name).ToList();
                            foreach (var item in sortedServices)
                            {
                                <tr>
                                    <td class="text-center"></td> <!-- DataTables will auto-number -->
                                    <td>@item.Name</td>
                                    <td>
                                        @(item.Description != null && item.Description.Length > 50 ? item.Description.Substring(0, 80) + "..." : item.Description)
                                    </td>
                                    <td>@item.Cost.ToString("F2") AED</td>

                                    <td>@item.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.LastUpdatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Create" asp-route-id="@item.UniqueId"><i class="fas fa-edit text-primary me-1"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId"><i class="fas fa-eye text-success me-1"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.UniqueId"><i class="fas fa-trash text-danger me-1"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Required Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Required Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#tblServices').DataTable({
                "pageLength": 10,
                "ordering": true,
                "order": [[1, "asc"]], // Sort alphabetically by Name
                "columnDefs": [
                    { "orderable": false, "targets": 0 }, // Sr column non-sortable
                    { "orderable": false, "targets": 7 }  // Actions column non-sortable
                ],
                "drawCallback": function (settings) {
                    // Auto-number Sr column
                    var api = this.api();
                    api.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }
            });
        });
    </script>
}

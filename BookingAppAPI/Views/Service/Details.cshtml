@model BookingAppAPI.DB.Services

@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Services"; // or "SessionYear", "FeeTypes", etc.

}

<div class="content ">
    <div class="card mt-0 mb-3 shadow rounded-1">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0">Service Details</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body border border-primary">
            <div class="row g-4">
                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Name</label>
                    <div class="form-control-plaintext">@Model.Name</div>
                </div>

                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Description</label>
                    <div class="form-control-plaintext">@Model.Description</div>
                </div>

                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Cost</label>
                    <div class="form-control-plaintext">₹@Model.Cost</div>
                </div>

                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Created Date</label>
                    <div class="form-control-plaintext">
                        @Model.CreatedDate.ToString("dd MMM yyyy hh:mm tt")
                    </div>
                </div>

                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Last Updated</label>
                    <div class="form-control-plaintext">
                        @Model.LastUpdatedDate.ToString("dd MMM yyyy hh:mm tt")
                    </div>
                </div>

                <div class="col-sm-6 col-xl-4">
                    <label class="form-label fw-semibold">Active Status</label>
                    <div class="form-control-plaintext">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-5">
                <a asp-action="Create" asp-route-id="@Model?.UniqueId" class="btn btn-sm btn-warning me-4 px-2">
                    <i class="fas fa-edit me-2"></i> Update
                </a>
                <a asp-action="Index" class="btn btn-sm btn-secondary px-2">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<BookingAppAPI.DB.Models.Subtopics>
@{
    var serviceId = ViewBag.ServiceId;
    var serviceName = ViewBag.ServiceName;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Subtopics for: <span class="text-primary">@serviceName</span></h2>
    <a asp-action="CreateSubtopic" asp-route-serviceId="@serviceId" class="btn btn-primary mb-3">Add New Subtopic</a>

    @if (!Model.Any())
    {
        <p class="text-muted">No subtopics found.</p>
    }

    <div class="list-group">
        @foreach (var s in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <strong>@s.Title</strong>
                <div>
                    <a asp-action="ManageBulletins" asp-route-subtopicId="@s.Id" class="btn btn-outline-secondary btn-sm me-2">View Bulletins</a>
                    <a asp-action="CreateBulletin" asp-route-subtopicId="@s.Id" class="btn btn-success btn-sm">Add Bulletin</a>
                </div>
            </div>
        }
    </div>
</div>

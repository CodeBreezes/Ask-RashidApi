@model BookingAppAPI.DB.Models.ServiceFullViewModel
@{
    ViewData["Title"] = "Manage Services, Subtopics, and Bulletins";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mt-4">
    <h2 class="text-center">Manage Services, Subtopics & Bulletins</h2>
    <hr />

    <!-- SERVICE FORM -->
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">Add Service</div>
        <div class="card-body">
            <form id="serviceForm">
                <div class="row mb-2">
                    <div class="col-md-4">
                        <input class="form-control" name="Name" placeholder="Service Name" required />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Cost" placeholder="Cost" type="number" required />
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Description" placeholder="Description" required />
                    </div>
                </div>
                <button class="btn btn-success" type="submit">Save Service</button>
            </form>
        </div>
    </div>

    <!-- SUBTOPIC FORM -->
    <div class="card mb-3">
        <div class="card-header bg-info text-white">Add Subtopic</div>
        <div class="card-body">
            <form id="subtopicForm">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <select class="form-select" name="ServiceId" id="serviceDropdown" required>
                            <option value="">Select Service</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" name="Title" placeholder="Subtopic Title" required />
                    </div>
                </div>
                <button class="btn btn-info" type="submit">Save Subtopic</button>
            </form>
        </div>
    </div>

    <!-- BULLETIN FORM -->
    <div class="card">
        <div class="card-header bg-secondary text-white">Add Bulletin</div>
        <div class="card-body">
            <form id="bulletinForm">
                <div class="row mb-2">
                    <div class="col-md-4">
                        <select class="form-select" name="ServiceId" id="bulletinServiceDropdown" required>
                            <option value="">Select Service</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" name="SubtopicId" id="subtopicDropdown" required>
                            <option value="">Select Subtopic</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" name="Content" placeholder="Bulletin Content" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4">
                        <input class="form-control" name="OrderIndex" type="number" placeholder="Order Index" required />
                    </div>
                </div>
                <button class="btn btn-secondary" type="submit">Save Bulletin</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadServices();

            // Save service
            $('#serviceForm').submit(function (e) {
                e.preventDefault();
                $.post('/Content/SaveService', $(this).serialize(), function () {
                    alert('Service saved.');
                    loadServices();
                });
            });

            // Save subtopic
            $('#subtopicForm').submit(function (e) {
                e.preventDefault();
                $.post('/Content/SaveSubtopic', $(this).serialize(), function () {
                    alert('Subtopic saved.');
                });
            });

            // Save bulletin
            $('#bulletinForm').submit(function (e) {
                e.preventDefault();
                $.post('/Content/SaveBulletin', $(this).serialize(), function () {
                    alert('Bulletin saved.');
                });
            });

            // Load subtopics when a service is selected in bulletin section
            $('#bulletinServiceDropdown').change(function () {
                var serviceId = $(this).val();
                $.get('/Content/GetSubtopicsByService/' + serviceId, function (data) {
                    $('#subtopicDropdown').empty().append('<option>Select Subtopic</option>');
                    data.forEach(sub => {
                        $('#subtopicDropdown').append(`<option value="${sub.id}">${sub.title}</option>`);
                    });
                });
            });
        });

        function loadServices() {
            $.get('/Content/GetAllServices', function (data) {
                $('#serviceDropdown, #bulletinServiceDropdown').empty().append('<option value="">Select Service</option>');
                data.forEach(s => {
                    $('#serviceDropdown, #bulletinServiceDropdown').append(`<option value="${s.uniqueId}">${s.name}</option>`);
                });
            });
        }
    </script>
}
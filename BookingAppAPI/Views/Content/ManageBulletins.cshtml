@model IEnumerable<BookingAppAPI.DB.Models.Bulletins>
@{
    var subtopicId = ViewBag.SubtopicId;
    var subtopicTitle = ViewBag.SubtopicTitle;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Bulletins for: <span class="text-info">@subtopicTitle</span></h2>
    <a asp-action="CreateBulletin" asp-route-subtopicId="@subtopicId" class="btn btn-primary mb-3">Add New Bulletin</a>

    @if (!Model.Any())
    {
        <p class="text-muted">No bulletins found.</p>
    }

    <ul class="list-group">
        @foreach (var b in Model)
        {
            <li class="list-group-item">
                <strong>Order @b.OrderIndex:</strong> @b.Content
            </li>
        }
    </ul>
</div>

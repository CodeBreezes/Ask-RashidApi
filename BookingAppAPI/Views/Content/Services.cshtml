@model IEnumerable<BookingAppAPI.DB.Services>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Services</h2>
        <a class="btn btn-primary" asp-action="CreateService">Add New Service</a>
    </div>

    <div class="row">
        @foreach (var s in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@s.Name</h5>
                        <p class="card-text">@s.Description</p>
                        <p class="text-muted">Cost: ₹@s.Cost</p>
                        <a asp-action="ManageSubtopics" asp-route-serviceId="@s.UniqueId" class="btn btn-outline-primary">Manage Subtopics</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

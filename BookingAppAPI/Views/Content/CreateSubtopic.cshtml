@model BookingAppAPI.DB.Models.Subtopics
@{
    ViewData["Title"] = "Create Subtopic";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h4>Create Subtopic</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSubtopic" method="post">
                        <input type="hidden" asp-for="ServiceId" value="@ViewBag.ServiceId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Subtopic Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger" />
                        </div>

                        <button class="btn btn-success w-100" type="submit">Save Subtopic</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
